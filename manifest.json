{
  "manifest_version": 3,
  "name": "Just News",
  "version": "1.0",
  "description": "Replaces clickbait headlines with informative summaries",
  "permissions": ["activeTab", "scripting", "webRequest", "storage"],
  "host_permissions": ["https://api.groq.com/openai/v1/chat/completions"],
  "action": {
    "default_title": "Summarize Headlines, Remove clickbait"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}