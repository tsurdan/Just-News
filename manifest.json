{
  "manifest_version": 3,
  "name": "Just News",
  "version": "1.0",
  "description": "Replaces clickbate headlines with informative summaries",
  "permissions": ["activeTab", "scripting", "webRequest", "storage"],
  "host_permissions": ["https://api.aimlapi.com/v1/chat/completions", "https://api.aimlapi.com/*"],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png"
    },
    "default_title": "Summarize Headlines"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}