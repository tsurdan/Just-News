{
  "manifest_version": 3,
  "name": "News Headline Summarizer",
  "version": "1.0",
  "description": "Replaces clickbait headlines with informative summaries",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png"
    },
    "default_title": "Summarize Headlines"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}